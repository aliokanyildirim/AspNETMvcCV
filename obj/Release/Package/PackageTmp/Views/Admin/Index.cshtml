@using ASPNETMvcCV.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Admin İşlemleri</h2>
<table class="table table-bordered"
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Düzenle</th>
        <th>Kaldır</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
       <td>@item.ID</td>
       <td>@item.KullaniciAdi</td>
       <td><a href="/Admin/AdminDuzenle/@item.ID"class="btn btn-danger">Düzenle</td>
       <td><a href="/Admin/AdminSil/@item.ID"class=" btn btn-success">Sil</td>
<!-- gönderdiğimzi ıd ye göre ilk önce ilgili yazıyı bulacağız.-->



        </tr>
         }
</table>
<a href="/Admin/AdminEkle/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
